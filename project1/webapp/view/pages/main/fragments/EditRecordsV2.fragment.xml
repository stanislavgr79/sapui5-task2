<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    <Dialog
        title="{i18n>dialogEditTitle}"
        contentWidth="40rem"
        resizable="true">
        <content>
            <core:Fragment fragmentName="project1.view.pages.main.fragments.ProductFields" type="XML" />
        </content>
        <beginButton>
            <Button
            text="{i18n>saveButton}"
            type="Emphasized"
            enabled="{modelV2>/validate/isFormValid}"
            press="editProductRecordV2"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>cancelButton}" type="Transparent" press="onCloseEditRecordProductDialogV2"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>